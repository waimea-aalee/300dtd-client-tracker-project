{% extends 'pages/base.jinja' %}


{% block title %}

    Client Tracker

{% endblock %}


{% block content %}

      {% if session.user_id %}

            <summary><strong>Edit Job</strong></summary>

            <form action="/job-edit/{{ job.client_id }}/{{ job.id }}" method="POST">

                <fieldset>
                    <label>
                        Name of Job:
                        <input 
                           type="text" 
                            name="name" 
                            value="{{ job.name }}"
                        required>
                    </label>

                    <label>
                        Hours worked:
                        <input
                            type="number" 
                            name="hours_worked" 
                            value="{{ job.hours_worked }}" 
                        required>
                    </label>

                    <label>
                        <input 
                            type="checkbox" 
                            name="billed" 
                            value="1" 
                            {% if job.billed %}checked{% endif  %}
                        >
                        Billed
                    </label>

                    <label>
                        <input 
                            type="checkbox" 
                            name="paid" 
                            value="1"
                            {% if job.paid %}checked{% endif %}
                        >
                        Paid
                    </label>
                </fieldset>

            <div style="display: inline-flex; gap: 10px; margin-top: 0; align-items: center;">
                <button type="submit">Save Changes</button>
                <a href="{{ refferer or '/' }}" role="button">Cancel</a>
            </div>

            </form>

        {% else %}

            <p>Please log in to edit jobs</p>

    {% endif %}

{% endblock %}