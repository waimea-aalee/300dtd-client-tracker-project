{% extends 'pages/base.jinja' %}


{% block title %}

    Client Tracker

{% endblock %}


{% block content %}

      {% if session.user_id %}

            <h1>{{ client_name }}</h1>

        <article>

                <table>

        <thead>

            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Hours Worked</th>
                <th>Billed</th>
                <th>Paid</th>
            </tr>

        </thead>

        <tbody>

            {% for job in jobs %}

            <tr>
                <td> {{ job.date }} </td>
                <td> {{ job.name }} </td>
                <td> {{ job.hours_worked }} </td>
                <td> {{ job.billed }} </td>
                <td> {{ job.paid }} </td>
                <td> <a href="/job-edit/{{ job.client_id }}/{{ job.id }}">Edit</a> </td>
            </tr>

            {% endfor %}

        </tbody>
        
    </table>


        <details>

            <summary><strong>Add a Job</strong></summary>

            <form action="/job-add/{{ client_id }}" method="POST">

                <fieldset>
                    <input 
                        type="text" 
                        name="name" 
                        placeholder="Name of job" 
                    required>

                    <input 
                        type="number" 
                        name="hours_worked" 
                        placeholder="Number of hours worked" 
                    required>

                    <label>
                        <input 
                            type="checkbox" 
                            name="billed" 
                            value="1" 
                        >
                        Billed
                    </label>
                    
                    <label>
                        <input 
                            type="checkbox" 
                            name="paid" 
                            value="1"
                        >
                        Paid
                    </label>
                </fieldset>
                
                <button>Submit</button>

            </form>

        </details>

        </article>

        <a href="/" role="button">Back</a>

        {% else %}

            No jobs yet!

    {% endif %}

{% endblock %}