{% extends 'pages/base.jinja' %}


{% block title %}

    Client Tracker

{% endblock %}


{% block content %}

      {% if session.user_id %}

            <h1>{{ client_name }}</h1>

        <article>

                <table>

        <thead>

            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Hours Worked</th>
                <th>Billed</th>
                <th>Paid</th>
            </tr>

        </thead>

        <tbody>

            {% for job in jobs %}

            <tr>
                <td> {{ job.date }} </td>
                <td> {{ job.name }} </td>
                <td> {{ job.hours_worked }} </td>
                <td> {{ job.billed }} </td>
                <td> {{ job.paid }} </td>
            </tr>

            {% endfor %}

        </tbody>
        
    </table>
                    
        </article>

        <a href="/job-add" role="button">Add a Job</a>

        <a href="/" role="button">Back</a>

        {% else %}

            No jobs yet!

    {% endif %}

{% endblock %}