{#=====================================================
  User Registration page
  - Form for adding a new user
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Client Tracker - New User

{% endblock %}


{% block content %}

    <article>

        <header>
            <h2>New User</h2>
        </header>

        <form action="/add-user" method="POST">

            <input
                type="text"
                name="name"
                placeholder="Your name"
                required
            >

            <input
                type="text"
                name="username"
                placeholder="Username"
                required
            >

            <input
                type="password"
                name="password"
                placeholder="Password"
                required
            >

            <button>Sign Up</button>

            <a href="/" role="button">Back</a>

        </form>

        <footer>
            Or, if you already have an account, <a href="/login">login</a>
        </footer>

    </article>

{% endblock %}

